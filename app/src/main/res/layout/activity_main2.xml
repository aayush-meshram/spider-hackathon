<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageButton
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:src="@drawable/highlights"
        android:id="@+id/image_button_1"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:src="@drawable/science"
        android:layout_below="@id/image_button_1"
        android:id="@+id/image_button_2"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_below="@id/image_button_2"
        android:src="@drawable/gaming"
        android:id="@+id/image_button_3"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_below="@id/image_button_3"
        android:src="@drawable/movies"
        android:id="@+id/image_button_4"/>

</RelativeLayout>